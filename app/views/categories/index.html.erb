<!-- app/views/admin/categories/index.html.erb -->
<h1>Categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Show', admin_category_path(category), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-success' %>
